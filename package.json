{
  "name": "vscode-rufo-fork",
  "displayName": "Rufo - Ruby formatter (Fork)",
  "description": "VSCode plugin for the rufo ruby formatter",
  "homepage": "https://github.com/baerchen201/vscode-rufo/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/baerchen201/vscode-rufo"
  },
  "keywords": [
    "ruby",
    "rufo",
    "formatting",
    "formatter"
  ],
  "bugs": {
    "url": "https://github.com/baerchen201/vscode-rufo/issues"
  },
  "license": "MIT License",
  "version": "0.0.6",
  "author": {
    "name": "baer1",
    "url": "https://github.com/baerchen201",
    "email": "videocreator@outlook.de"
  },
  "publisher": "baer1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Formatters"
  ],
  "galleryBanner": {
    "color": "#FAFBFC",
    "theme": "light"
  },
  "activationEvents": [
    "onLanguage:ruby"
  ],
  "icon": "icon.png",
  "preview": true,
  "contributes": {
    "configuration": {
      "title": "Rufo",
      "properties": {
        "rufo.exe": {
          "type": "string",
          "default": "rufo",
          "description": "Path to invoke rufo",
          "scope": "application"
        },
        "rufo.args": {
          "type": "array",
          "default": [],
          "description": "Additional arguments to pass to the executable",
          "scope": "application"
        },
        "rufo.useBundler": {
          "type": "boolean",
          "default": false,
          "description": "Whether Rufo should be started via Bundler"
        }
      }
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "prebuild": "node ./.rm.js",
    "build": "tsc -p ./",
    "pretest": "npm run build",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.8.6",
    "@types/vscode": "^1.95.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "glob": "^11.0.0",
    "mocha": "^10.8.2",
    "typescript": "^5.6.3"
  }
}
